# ==============================================
# SHPD Backend - Variables de Entorno
# ==============================================
# Copiar este archivo como .env y configurar los valores

# Base de Datos PostgreSQL
DATABASE_URL=postgresql://shpd_user:shpd_password@localhost:5432/shpd_db

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# OpenAI API
OPENAI_API_KEY=sk-...tu-clave-aqui...

# Configuración del Servidor
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
WORKERS=4

# Seguridad
SECRET_KEY=tu-clave-secreta-super-segura-aqui
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_ALLOW_HEADERS=["*"]

# Configuración de Análisis Postural
POSTURE_THRESHOLD=0.7
POSTURE_CONFIDENCE_MIN=0.5
BAD_POSTURE_DURATION_THRESHOLD=5
ALERT_COOLDOWN_SECONDS=60

# Configuración de MediaPipe
MEDIAPIPE_MIN_DETECTION_CONFIDENCE=0.5
MEDIAPIPE_MIN_TRACKING_CONFIDENCE=0.5
MEDIAPIPE_MODEL_COMPLEXITY=1

# Límites del Sistema
MAX_FRAME_QUEUE_SIZE=30
MAX_CONCURRENT_SESSIONS=10
VIDEO_FRAME_RATE=30
VIDEO_QUALITY=0.8

# Telegram Bot (opcional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# Logs
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/shpd_backend.log

# Métricas y Monitoreo (opcional)
ENABLE_METRICS=false
METRICS_PORT=9090